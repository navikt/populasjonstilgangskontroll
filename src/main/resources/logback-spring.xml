<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="stdout"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>
    <appender name="secureLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/secure-logs/secure.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>/secure-logs/secure.log.%i</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>1</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>50MB</maxFileSize>
        </triggeringPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <springProfile name="dev">
        <logger name="org.springframework.retry" level="trace"/>
        <logger name="org.apache.hc.client5.http.wire" level="info"/>
        <logger name="org.hibernate.SQL" level="debug"/>
        <logger name="org.hibernate.orm.jdbc.bind" level="trace"/>
        <logger name="no.nav.tilgangsmaskin" level="trace"/>

        <logger name="secureLog" level="info" additivity="false">
            <appender-ref ref="secureLog"/>
        </logger>

    </springProfile>
    <springProfile name="local | test">
        <appender name="stdout"
                  class="ch.qos.logback.core.ConsoleAppender">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %X{Nav-CallId} [%thread] %-5level %logger{70} - %msg%n</Pattern>
            </layout>
        </appender>
        <logger name="secureLog" level="debug" additivity="false">
            <appender-ref ref="stdout"/>
        </logger>
        <logger name="no.nav.tilgangsmaskin" level="trace"/>
        <logger name="org.hibernate.SQL" level="debug"/>
        <logger name="org.hibernate.orm.jdbc.bind" level="trace"/>
        <logger name="no.nav.security" level="trace"/>
    </springProfile>


    <springProfile name="prod">
        <turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
            <Name>CONFIDENTIAL_FILTER</Name>
            <Marker>CONFIDENTIAL</Marker>
            <OnMatch>DENY</OnMatch>
        </turboFilter>
        <logger name="org.hibernate.SQL" level="info"/>
        <logger name="org.hibernate.orm.jdbc.bind" level="info"/>
        <logger name="secureLog" level="info" additivity="false">
            <appender-ref ref="secureLog"/>
        </logger>
    </springProfile>

    <root level="info">
        <appender-ref ref="stdout"/>
    </root>
</configuration>